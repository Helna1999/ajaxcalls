
@{
    ViewBag.Title = "Test";
}

<h2>Ajax Calculator</h2>

<h1>Number 1: <input type="text" id="nr1" alt="Number 1" /></h1>
<h1>Number 2: <input type="text" id="nr2" alt="Number 2" /></h1>

<input type="button" id="calculate" value="Do the math!" class="btn btn-default" />

<div id="results">

</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#calculate").click(function () {
           
            var nr1 = $("#nr1").val();
            var nr2 = $("#nr2").val();
             
            
            $.ajax({
                url:'@Url.Action("Math", "Home")?nr1=' + nr1 + '&nr2=' + nr2,
                data: nr1, nr2,
                success: function (result) {
                   @* if (data.status = "ok") {*@
                    $("#results").html(result);
                    console.log("ok");

                    @*}*@

                }
            });
        });
     
    });


</script>